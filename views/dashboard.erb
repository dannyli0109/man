<div class="page-content">
  <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--4-col";>
      <% @hobby_names.each do |hobby_name| %>
        <h3><%= hobby_name%></h3>
        <hr>
      <% @results[hobby_name].each do |result|%>

      <div class="event-card mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title mdl-card--expand">
          <h5><%= result["name"] %><br/><%= sec = (result["time"].to_f / 1000).to_s
          Date.strptime(sec, '%s') %><br/>
          <% if result["venue"] != nil %>
            <%= result["venue"]["name"] %>
          <% end %>
        </h5>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="<%= result["link"] %>">Check out this event</a>
          <div class="mdl-layout-spacer"></div>
          <i class="material-icons">event</i>
        </div>
      </div>
      <hr>


      <% end %>
      <% end %>


    </div>
  </div>
</div>
